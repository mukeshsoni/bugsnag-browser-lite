{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "esnext",
    "lib": ["es2015", "dom"],
    "declaration": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": false,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "declarationMap": true,
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
